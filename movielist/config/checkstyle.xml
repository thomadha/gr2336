<?xml version="1.0"?>
<!-- <!DOCTYPE module PUBLIC
        "-//Puppy Crawl//DTD Check Configuration 1.3//EN"
        "http://www.puppycrawl.com/dtds/configuration_1_3.dtd"> -->

<module name="Checker">
    <!--<module name="TreeWalker">-->
    <!-- Add Checkstyle rules here -->
    <module name="Indentation">
        <property name="basicOffset" value="4"/>
        <property name="braceAdjustment" value="0"/>
    </module>
    <!-- Rule for maximum line length, set to 120 -->
    <module name="LineLength">
        <property name="max" value="120"/>
        <property name="ignorePattern" value="^import\s.*$"/>
    </module>
    <!-- Maximum number of methods in a class is 30 -->
    <module name="MethodLength">
        <property name="max" value="30"/>
    </module>
    <!-- Maximum cyclomatic complexity of 10 to avoid complex methods -->
    <module name="CyclomaticComplexity">
        <property name="max" value="10"/>
    </module>
    <!--</module>-->
</module>

